<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center|center_vertical"
    tools:context="shiftac.github.com.upartier.FragmentOne">

    <Button
        android:id="@+id/btnBlock1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="395dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/books"
        android:drawablePadding="10dip"
        android:gravity="center_vertical"
        android:paddingLeft="20dip"
        android:text="自习专栏"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBlock2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58000004" />

    <Button
        android:id="@+id/btnBlock2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="395dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/football"
        android:drawablePadding="10dip"
        android:gravity="center_vertical"
        android:paddingLeft="20dip"
        android:text="体育专栏"
        android:textSize="24dp"
        android:background="@drawable/button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBlock1" />
</android.support.constraint.ConstraintLayout>
